    <%- controller_retrieve_scope.each do |line| -%>
    <%= line %>
    <%- end -%>
    <%= controller_create_resource %>
    <%= controller_respond_with_resource %>
  end

  def update
    <%- controller_retrieve_scope.each do |line| -%>
    <%= line %>
    <%- end -%>
    <%= controller_retrieve_resource %>
    <%= controller_update_resource %>
    <%= controller_respond_with_resource %>
  end

  def destroy
    <%- controller_retrieve_scope.each do |line| -%>
    <%= line %>
    <%- end -%>
    <%= controller_retrieve_resource %>
    <%= controller_destroy_resource %>
    <%= controller_respond_with_resource %>
  end

end
